PORT=5000

# Database Configuration
# Options: local (uses local MongoDB) or cloud (uses MongoDB Atlas)
DB_SOURCE=local

# Local MongoDB URI (when DB_SOURCE=local)
MONGODB_URI_LOCAL=mongodb://localhost:27017/mern_smtp

# Cloud MongoDB Atlas URI (when DB_SOURCE=cloud)
# Replace username:password and cluster details with your actual MongoDB Atlas credentials
MONGODB_URI_CLOUD=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/mern_smtp?retryWrites=true&w=majority

# Legacy/Fallback MongoDB URI (optional)
MONGODB_URI=mongodb://localhost:27017/mern_smtp

# Gmail SMTP Configuration
# Get app password from: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Environment Mode
NODE_ENV=development
# NODE_ENV=production

# Client URL for CORS
CLIENT_URL=http://localhost:3000
