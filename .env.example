# Docker Compose Environment Variables
# This file provides variable substitution for docker-compose.yml
# 
# IMPORTANT: Copy this file to .env and fill in your actual credentials
# cp .env.example .env

# Gmail SMTP Configuration
# Get app password from: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Frontend API URL (used during Docker build)
# For production deployment, change this to your actual domain
# Example: VITE_API_URL=https://api.yourdomain.com/api
VITE_API_URL=http://localhost:5000/api
